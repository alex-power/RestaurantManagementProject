                                <td>@if(u.Users_Employee != null)
                                    { @u.Users_Employee.HoursPerWeek; }
                                else
                                { <p> - </p>}
                                </td>
                                <td>
                                    <a class="btn btn-danger" style="" href="@Url.Action("DeleteEmployee", "Manager", new { userId = u.Id})">
                                        <span class=""></span> Remove Employee
                                    </a>    
                                </td>
                            </tr>
                        }
