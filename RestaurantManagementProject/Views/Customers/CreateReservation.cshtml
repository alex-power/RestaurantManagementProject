<style>
    p.thick {
        font-weight: bold;
    }

    footer {
        background-color: #f2f2f2;
        padding: 15px;
        font-size: 10px;
    }

    input[type="date"]:before {
        content: attr(placeholder) !important;
        color: #aaa;
        margin-right: 0.5em;
    }

    input[type="date"]:focus:before,
    input[type="date"]:valid:before {
        content: "";
    }
</style>

<body>
     <div class="container">
        <h2 style="font-family:Calibri;">Make a Reservation</h2> <br />
            @using (Html.BeginForm("CreateReservation", "Customers", FormMethod.Post))
            {
                <form>
                    <div class="row">
                        <div class="col-xs-3">
                            <label for="user">Name</label>
                            <input name="name" class="form-control" id="user" placeholder="Enter Name" required>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-xs-4">
                            <label for="note">Note</label><br>
                            <input name="note" class="form-control" id="note" placeholder="Enter Notes">
                        </div>
                    </div>
                    <br />

                    <div class="row">
                        <div class="col-xs-4">
                            <div style="display:inline; float:left">
                                <label>Date</label><br />
                                <input type="date" name="date" required />
                            </div>
                            <div style="margin-left:5%; display:inline; float:left;">
                                <label>Time</label><br />
                                <input type="time" name="time" required />
                            </div>
                        </div>
                    </div>
                    <br />
                    <button id="submitButton" type="submit" class="btn btn-default">Make Reservation</button>
                </form>
            }

    </div>


</body>

