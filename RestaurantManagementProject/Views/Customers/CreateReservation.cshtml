    <div class="container">
        <h2>Make Reservation</h2>
        <form>
            <div class="row">
                <div class="col-xs-3">

                </div>
            </div>
            <div class="row">
                <div class="col-xs-3">
                    <label for="user">Name</label>
                    <input type="user" class="form-control" id="user" placeholder="Enter Name">
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-xs-4">
                    <label for="size">Party Size</label><br>
                    <input type="user" class="form-control" id="size" placeholder="Enter Party Size">
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-xs-4">
                    <label for="note">Note</label><br>
                    <input type="user" class="form-control" id="note" placeholder="Enter Notes">
                </div>
            </div>
            <br />

            <div class="row">
                <div class="col-xs-4">
                    <label>Date</label><br />
                    <input type="date"/><br /><br />
                    <label>Time</label><br />
                    <input type="time"/>
                </div>
            </div>
            <br />
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>


