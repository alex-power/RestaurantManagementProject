<style>
    p.thick {
        font-weight: bold;
    }

    footer {
        background-color: #f2f2f2;
        padding: 15px;
        font-size: 10px;
    }

    fieldset, label {
        margin: 0;
        padding: 0;
    }

    h1 {
        font-size: 1.5em;
        margin: 10px;
    }

    /****** Style Star Rating Widget *****/

    .rating {
        border: none;
        float: left;
    }

        .rating > input {
            display: none;
        }

        .rating > label:before {
            margin: 5px;
            font-size: 1.25em;
            font-family: FontAwesome;
            display: inline-block;
            content: "\f005";
        }

        .rating > .half:before {
            content: "\f089";
            position: absolute;
        }

        .rating > label {
            color: #ddd;
            float: right;
        }

        /***** CSS Magic to Highlight Stars on Hover *****/

        .rating > input:checked ~ label, /* show gold star when clicked */
        .rating:not(:checked) > label:hover, /* hover current star */
        .rating:not(:checked) > label:hover ~ label {
            color: #FFD700;
        }
            /* hover previous stars in list */

            .rating > input:checked + label:hover, /* hover current star when changing rating */
            .rating > input:checked ~ label:hover,
            .rating > label:hover ~ input:checked ~ label, /* lighten current selection */
            .rating > input:checked ~ label:hover ~ label {
                color: #FFED85;
            }
</style>

<body>
    <div class="container">
        <h2 style="font-family:Calibri;">Leave a Review</h2> <br />
        @using (Html.BeginForm("LeaveReview", "Customers", FormMethod.Post))
        {
            <form>
                <div class="row">
                    <div class="col-xs-3">
                        <label>Name</label>
                        <input name="name" class="form-control" id="user" placeholder="Enter Name" required>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-xs-4 left">
                        <label>Review</label><br>
                        <textarea class="form-group" rows="3" style="width:480px;" name="review" placeholder="Leave Review" required></textarea>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-3 left">
                        <label for="user">Rating</label>
                        <div required>
                            <fieldset class="rating">
                                <input type="radio" id="star5" name="rating" value=5 /><label class="full" for="star5" title="Awesome - 5 stars"></label>
                                <input type="radio" id="star4" name="rating" value=4 /><label class="full" for="star4" title="Pretty good - 4 stars"></label>
                                <input type="radio" id="star3" name="rating" value=3 /><label class="full" for="star3" title="Meh - 3 stars"></label>
                                <input type="radio" id="star2" name="rating" value=2 /><label class="full" for="star2" title="Kinda bad - 2 stars"></label>
                                <input type="radio" id="star1" name="rating" value=1 /><label class="full" for="star1" title="Sucks big time - 1 star"></label>
                            </fieldset>
                        </div>
                    </div>
                </div>

                <br />
                <button type="submit" class="btn btn-default">Leave Review</button>
            </form>
        }
    </div>
    <div></div>
    <div class="col-xs-12">
        @foreach (Review r in Model)
        {
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Review by @r.CustomerName: @r.Rating Stars</h3>                    
                </div>
                <div class="panel-body" style="margin-bottom:0px">
                    <p>@r.Text</p>
                    <small>Posted: @r.DateOfPost</small>
                </div>
            </div>
        }
    </div>
</body>

