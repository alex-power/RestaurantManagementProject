    <!-- CHANGE -->
    <div class="container">
        <h1>Tables</h1>

        <div class="row">
            <div class="col-xs-12">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Table Number</th>
                            <th>Seats</th>
                            <th>Status</th>
                            <th></th>
                            <th></th>
                            <th>Server</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Table t in Model.Tables)
                        {
                            <tr>
                                <td>@t.Id</td>
                                <td>@t.Seats</td>
                                <td>@t.TableStatus </td>
                                <td>
                                    @if (t.TableStatus.Equals("Open"))
                                    { 
                                        <a class="btn btn-default" style="" href="@Url.Action("UpdateTable", "Server", new { tableId = t.Id, status = "Occupied" })">
                                            <span class="glyphicon glyphicon-plus"></span> Seat Customer
                                        </a>
                                    }
                                    else
                                    {                                        
                                        <a class="btn btn-default" style="" href="@Url.Action("UpdateTable", "Server", new { tableId = t.Id, status = "Open" })">
                                            <span class="glyphicon glyphicon-check"></span> Table Open
                                        </a>
                                    }
                                </td>
                                
                                <td>
                                    <a class="btn btn-default" style="" href="@Url.Action("InputOrder", "Server", new { tableId = t.Id })">
                                        <span class="glyphicon glyphicon-plus"></span> Add Order
                                    </a>
                                </td>
                               <td>
                                   @t.Users_Server.Users_Employee.User.Name
                               </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
