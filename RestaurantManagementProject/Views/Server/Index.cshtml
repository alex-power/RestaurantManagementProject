<style>
    p.thick {
        font-weight: bold;
    }

    footer {
        background-color: #f2f2f2;
        padding: 15px;
        font-size: 10px;
    }

    a {
        color: inherit;
        text-decoration: none;
    }

        a:hover {
            color: #00A0C6;
            text-decoration: none;
            cursor: pointer;
        }
</style>

<body>

    <div class="container"> 
        <h2 style="font-family:Calibri;">Tables</h2> <br />
        <div class="row">
            <div class="col-xs-12">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Table Number</th>
                            <th>Seats</th>
                            <th>Status</th>
                            <th>Seat Customer</th>
                            <th>Add Order</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Table t in Model.Tables)
                        {
                            <tr>
                                <td>@t.Id</td>
                                <td>@t.Seats</td>
                                <td>@t.TableStatus </td>
                                <td>
                                    @if (t.TableStatus.Equals("Open"))
                                    { 
                                        <a class="btn btn-success" style="" href="@Url.Action("UpdateTable", "Server", new { tableId = t.Id, status = "Occupied" })">
                                            <span class="glyphicon glyphicon-plus"></span> Seat Customer
                                        </a>
                                    }
                                    else
                                    {                                        
                                        <a class="btn btn-warning" style="" href="@Url.Action("UpdateTable", "Server", new { tableId = t.Id, status = "Open" })">
                                            <span class="glyphicon glyphicon-minus"></span> Open Table
                                        </a>
                                    }
                                </td>
                                
                                <td>
                                    <a class="btn btn-default" style="" href="@Url.Action("InputOrder", "Server", new { tableId = t.Id })">
                                        <span class="glyphicon glyphicon-plus"></span> Add Order
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>
